<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/feedback_fragment_background"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/spacing_xmicro"
        android:layout_marginTop="@dimen/spacing_xmicro"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_close" />

    <ImageView
        android:id="@+id/feedbackIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/spacing_xtiny"
        android:layout_marginTop="@dimen/spacing_smallest"
        android:src="@drawable/emoticon_correct" />


    <TextView
        android:id="@+id/feedbackText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_smallest"
        android:layout_marginTop="@dimen/spacing_xmicro"
        android:text="@string/feedback_text_correct"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/feedbackPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/white_box"
        android:padding="@dimen/spacing_xmicro"
        android:text="VocÃª ganhou +10 Pontos"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/feedbackBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_marginRight="@dimen/spacing_medium"
        android:background="@drawable/transparent_button"
        android:padding="@dimen/spacing_xtiny"
        android:text="Voce ganhou 10 pontos"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/nextQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/transparent_button"
        android:padding="@dimen/spacing_xtiny"
        android:text="@string/next_question_button"
        android:theme="@style/AppTheme.TransparentButton" />

</LinearLayout>