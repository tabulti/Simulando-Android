<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:showIn="@layout/fragment_answer_test">

    <LinearLayout
        android:id="@+id/alternative_a_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="8dp">

        <include
            android:id="@+id/alternative_a"
            layout="@layout/alternative_layout" />

        <TextView
            android:id="@+id/alternative_a_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="alternativa A"
            android:textSize="16sp"
            android:fontFamily="serif"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/alternative_b_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:background="@color/gray_2"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal">

            <include android:id="@+id/alternative_b"
                layout="@layout/alternative_layout" />

            <TextView
                android:id="@+id/alternative_b_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:textSize="16sp"
                android:text="alternativa B"
                android:fontFamily="serif"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/alternative_c_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:background="@color/gray_2"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal">

            <include android:id="@+id/alternative_c"
                layout="@layout/alternative_layout" />

            <TextView
                android:id="@+id/alternative_c_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="alternativa C"
                android:textSize="16sp"
                android:fontFamily="serif"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/alternative_d_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:background="@color/gray_2"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal">

            <include
                android:id="@+id/alternative_d"
                layout="@layout/alternative_layout" />

            <TextView
                android:id="@+id/alternative_d_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="alternativa D"
                android:textSize="16sp"
                android:fontFamily="serif"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/alternative_e_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:background="@color/gray_2"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal">

            <include android:id="@+id/alternative_e"
                layout="@layout/alternative_layout" />

            <TextView
                android:id="@+id/alternative_e_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="alternativa E"
                android:textSize="16sp"
                android:fontFamily="serif"/>
        </LinearLayout>

    </LinearLayout>
